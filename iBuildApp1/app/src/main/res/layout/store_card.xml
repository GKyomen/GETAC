<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@drawable/rounded_shadow"
    android:elevation="4dp"
    android:padding="8dp"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/establishmentImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="2dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/extrainfoTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Informações adicionais"
        android:textColor="@android:color/white"
        android:background="@color/secondaryBlue"
        app:layout_constraintEnd_toEndOf="@id/establishmentImage"
        app:layout_constraintTop_toTopOf="@id/establishmentImage"/>

    <TextView
        android:id="@+id/establishmentName"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/gray1"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/establishmentImage"
        app:layout_constraintTop_toBottomOf="@id/establishmentImage"
        tools:text="Estabelecimento - Local/Região" />

    <TextView
        android:id="@+id/establishmentDescription"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/establishmentName"
        app:layout_constraintTop_toBottomOf="@id/establishmentName"
        android:fontFamily="@font/roboto_regular"
        tools:text="Produto • Categoria"
        android:textColor="@color/gray3"/>

</androidx.constraintlayout.widget.ConstraintLayout>
