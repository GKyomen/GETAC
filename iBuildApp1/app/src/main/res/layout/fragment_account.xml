<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <View
        android:id="@+id/viewTopAccount"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/primaryDeep2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/viewMiddleAccount"/>

    <View
        android:id="@+id/viewMiddleAccount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTopAccount"
        app:layout_constraintBottom_toBottomOf="@id/txtFavAccount"/>

    <ImageView
        android:id="@+id/userImgAccount"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circular_shape_stroke"
        android:contentDescription="@string/user_img_desc"
        android:scaleType="centerCrop"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_account_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewTopAccount" />

    <TextView
        android:id="@+id/userNameAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/user_name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userImgAccount" />

    <TextView
        android:id="@+id/userEmailAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/user_email"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNameAccount" />

    <View
        android:id="@+id/viewPremiumAccount"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/txtRateTitleAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewMiddleAccount" />

    <ImageButton
        android:id="@+id/btnFavAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="12dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="7dp"
        android:background="@drawable/circular_shape"
        android:backgroundTint="@color/primaryNeutral"
        android:src="@drawable/ic_favorite_24dp"
        app:layout_constraintTop_toBottomOf="@id/userEmailAccount"
        app:layout_constraintBottom_toTopOf="@id/txtFavAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSettingsAccount"/>

    <ImageButton
        android:id="@+id/btnSettingsAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="12dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="7dp"
        android:background="@drawable/circular_shape"
        android:backgroundTint="@color/primaryNeutral"
        android:src="@drawable/ic_settings_24dp"
        app:layout_constraintTop_toBottomOf="@id/userEmailAccount"
        app:layout_constraintStart_toEndOf="@id/btnFavAccount"
        app:layout_constraintBottom_toTopOf="@id/txtSettingsAccount"
        app:layout_constraintEnd_toStartOf="@id/btnEditAccount"/>

    <ImageButton
        android:id="@+id/btnEditAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="12dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="7dp"
        android:background="@drawable/circular_shape"
        android:backgroundTint="@color/primaryNeutral"
        android:src="@drawable/ic_edit_24dp"
        app:layout_constraintTop_toBottomOf="@id/userEmailAccount"
        app:layout_constraintBottom_toTopOf="@id/txtEditAccount"
        app:layout_constraintStart_toEndOf="@id/btnSettingsAccount"
        app:layout_constraintEnd_toStartOf="@id/btnLogoutAccount"/>

    <ImageButton
        android:id="@+id/btnLogoutAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="12dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="7dp"
        android:background="@drawable/circular_shape"
        android:backgroundTint="@color/primaryNeutral"
        android:src="@drawable/ic_logout_24dp"
        app:layout_constraintStart_toEndOf="@id/btnEditAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userEmailAccount"
        app:layout_constraintBottom_toTopOf="@id/txtLogoutAccount"/>

    <TextView
        android:id="@+id/txtFavAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_light"
        android:text="Favoritos"
        app:layout_constraintTop_toBottomOf="@id/btnFavAccount"
        app:layout_constraintBottom_toTopOf="@id/viewPremiumAccount"
        app:layout_constraintStart_toStartOf="@id/btnFavAccount"
        app:layout_constraintEnd_toEndOf="@id/btnFavAccount" />

    <TextView
        android:id="@+id/txtSettingsAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_light"
        android:text="Ajustes"
        app:layout_constraintTop_toBottomOf="@id/btnSettingsAccount"
        app:layout_constraintBottom_toTopOf="@id/viewPremiumAccount"
        app:layout_constraintStart_toStartOf="@id/btnSettingsAccount"
        app:layout_constraintEnd_toEndOf="@id/btnSettingsAccount" />

    <TextView
        android:id="@+id/txtEditAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_light"
        android:text="Editar"
        app:layout_constraintTop_toBottomOf="@id/btnEditAccount"
        app:layout_constraintBottom_toTopOf="@id/viewPremiumAccount"
        app:layout_constraintStart_toStartOf="@id/btnEditAccount"
        app:layout_constraintEnd_toEndOf="@id/btnEditAccount"/>

    <TextView
        android:id="@+id/txtLogoutAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_light"
        android:text="Sair"
        app:layout_constraintTop_toBottomOf="@id/btnLogoutAccount"
        app:layout_constraintBottom_toTopOf="@id/viewPremiumAccount"
        app:layout_constraintStart_toStartOf="@id/btnLogoutAccount"
        app:layout_constraintEnd_toEndOf="@id/btnLogoutAccount" />


    <TextView
        android:id="@+id/txtRateTitleAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginBottom="12dp"
        android:text="@string/account_rate_title"
        android:textColor="@color/primaryDeep1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtRateSubtitleAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtRateSubtitleAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/account_rate_subtitle"
        app:layout_constraintBottom_toTopOf="@+id/btnRateAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/btnRateAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primaryNeutral"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_rate_stars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>