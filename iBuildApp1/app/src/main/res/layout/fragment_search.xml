<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/fakeWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <EditText
        android:id="@+id/searchBar_editText"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:inputType="text"
        android:paddingHorizontal="50dp"
        android:singleLine="true"
        android:textColor="@color/primaryDeep2"
        android:hint="@string/hint_search_product"
        android:textColorHint="@color/gray4"
        android:textStyle="normal"
        android:background="@drawable/circular_bar"
        android:elevation="4dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/searchBar_searchIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_24dp"
        android:tint="@color/primaryDeep1"
        android:elevation="4dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="@id/searchBar_editText"
        app:layout_constraintBottom_toBottomOf="@id/searchBar_editText"
        app:layout_constraintStart_toStartOf="@id/searchBar_editText"/>

    <ImageView
        android:id="@+id/searchBar_cleanIcon"
        android:src="@drawable/ic_close_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:tint="@color/primaryDeep1"
        android:elevation="4dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/searchBar_editText"
        app:layout_constraintBottom_toBottomOf="@id/searchBar_editText"
        app:layout_constraintEnd_toEndOf="@id/searchBar_editText"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchBar_editText">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/categoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_hscroll1_title"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/categorySubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_hscroll1_subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/categoryTitle"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gridCategory"
                android:overScrollMode="never"
                android:backgroundTint="@color/fakeWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/categorySubtitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>