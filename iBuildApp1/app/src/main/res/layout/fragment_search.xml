<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/fakeWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <EditText
        android:id="@+id/inputSearch"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:hint="@string/hint_search_product"
        android:inputType="text"
        android:paddingLeft="50dp"
        android:singleLine="true"
        android:textColor="@color/gray1"
        android:textColorHint="@color/gray4"
        android:textStyle="normal"
        android:background="@drawable/circular_bar"
        android:elevation="4dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/calc_clear_txt_Prise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Search"
        android:src="@drawable/ic_search_24dp"
        android:tint="@color/primaryDeep1"
        android:elevation="4dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="@id/inputSearch"
        app:layout_constraintBottom_toBottomOf="@id/inputSearch"
        app:layout_constraintStart_toStartOf="@id/inputSearch"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inputSearch">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/categoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_hscroll1_title"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/categorySubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_hscroll1_subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/categoryTitle"/>

            <androidx.recyclerview.widget.RecyclerView
                tools:listitem="@layout/category_card"
                tools:itemCount="8"
                android:id="@+id/gridCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/categorySubtitle"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>